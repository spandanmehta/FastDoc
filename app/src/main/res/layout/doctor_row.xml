<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/doctor_layout"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:clickable="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            >

            <TextView
                android:id="@+id/name_entry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="10dp"
                android:text="T0rN4D0 [S]"
                android:textSize="20dp"

                android:textStyle="bold"
                android:textIsSelectable="false"
                />
            <TextView
                android:id="@+id/degree_entry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:text="B.Tech" />
            <TextView
                android:id="@+id/experience_entry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:text="Lifetime" />

            <TextView
                android:id="@+id/address_entry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:clickable="true"
                android:autoLink="map"
                android:text="Earth"
                android:contextClickable="true"
                android:enabled="true"
                android:inputType="textPostalAddress|none|textMultiLine"
                android:autoText="false"/>
            <TextView
                android:id="@+id/phone_entry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:text="4206996"
                android:autoLink="phone"
                android:clickable="true"
                android:inputType="phone"
                android:enabled="true"
                android:contextClickable="true"
                android:textIsSelectable="false"
                android:accessibilityLiveRegion="assertive"
                android:textColor="@color/accent_material_light"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>



</RelativeLayout>